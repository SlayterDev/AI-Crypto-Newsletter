# Your Timezone
TZ=America/Chicago

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=500

# CryptoPanic API Configuration
CRYPTOPANIC_API_KEY=your_cryptopanic_key
# Cache Configuration (optional)
# CrytpoPanic limits to 100req/mo on free plans. Cache helps if running a lot for developement
ENABLE_CACHE=true
CACHE_TTL_MINUTES=360

# CoinGecko API Configuration
COINGECKO_API_KEY=your_coingecko_api_key_here

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=your_email@gmail.com

# Newsletter Configuration
TO_EMAILS=recipient1@example.com,recipient2@example.com
COINS=bitcoin,ethereum,solana,cardano
NEWSLETTER_TITLE=Crypto Daily Newsletter
DRY_RUN=false

# Cron Schedule (optional, defaults to midnight in local timezone)
# Format: minute hour day month weekday
# Examples:
#   0 0 * * *    - Daily at midnight
#   0 8 * * *    - Daily at 8 AM
#   0 */6 * * *  - Every 6 hours
#   */30 * * * * - Every 30 minutes (for testing)
CRON_SCHEDULE=0 0 * * *

# API Rate Limits (optional)
MAX_RETRIES=3
RETRY_DELAY_MS=1000
